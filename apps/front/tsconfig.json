{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",

        // other typescript-plugin-styled-components options can be added here
        "minify": false,
        "ssr": false
      }
    ]
  },
  "references": [
    {
      "path": "../../packages/ui"
    }
  ],

  "include": ["src"],
  "exclude": ["tests", "dist", "build"]
}
